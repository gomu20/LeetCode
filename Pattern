import java.util.Scanner;
public class Pattern {
	
	public static void main(String[] args) {
		System.out.println("enter input");
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		pattern1(num);
	}
	
	
	public static void pattern1(int num){
		for (int i=1;i<=num;i++) {
			for (int j=1;j<=num;j++) {
				System.out.print("*  ");
			}
			System.out.println();
		}
	}

}





import java.util.Scanner;
import java.util.Scanner;
public class p2 {
	public static void main(String[] args) {
		System.out.println("enter input");
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		pattern2(num);
	}
	
	
	public static void pattern2(int num){
		for (int i=1;i<=num;i++) {
			for (int j=1;j<=i;j++) {
				System.out.print("*  ");
			}
			System.out.println();
		}
	}	

}import java.util.Scanner;

public class p7 {
	public static void main(String[] args) {
		System.out.println("enter input");
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		pattern1(num);
	}
	
	
	public static void pattern1(int num){
		for (int i=1;i<=2*num-1;i++) {
			int stars=i;
			if(i>num ) {
				stars=2*num-i;
			}
			for (int j=1;j<=stars;j++) {
				
				
				System.out.print("*");
			}
			System.out.println();
		}
	}

}


